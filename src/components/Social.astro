---
const { platform, username } = Astro.props;
---

<a class='social' href={`https://www.${platform}.com/${username}`}>{platform}</a
>

<style>
  .social {
    padding: 0.5rem 1rem;
    color: white;
    background-color: rgb(0, 0, 0);
    text-decoration: none;
    height: fit-content;
    width: 50%;
    text-align: center;
  }
</style>
